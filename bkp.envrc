# Auto-activate conda env for this project
# Requires direnv. After creating this file, run: direnv allow

if command -v conda >/dev/null 2>&1; then
  eval "$(conda shell.bash hook)"
  conda activate dsa_contimg >/dev/null 2>&1 || echo "[envrc] Warning: conda env 'dsa_contimg' not found"
else
  echo "[envrc] Warning: conda not found on PATH"
fi

export PYTHONPATH=${PYTHONPATH}:${PWD}/src

