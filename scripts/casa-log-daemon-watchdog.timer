[Unit]
Description=Run CASA Log Daemon health check every 5 minutes
Requires=casa-log-daemon-watchdog.service

[Timer]
# Run every 5 minutes
OnCalendar=*:0/5
# Also run 2 minutes after boot
OnBootSec=2min
# Run immediately if timer was missed
Persistent=true
# Add some randomization to avoid thundering herd
RandomizedDelaySec=30s

[Install]
WantedBy=timers.target

