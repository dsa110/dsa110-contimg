# Frontend development and testing Docker container
# Debian-based version (compatible with Playwright browser binaries)
FROM node:22

WORKDIR /app

# Install Playwright dependencies for Debian
# These are required for browsers to run in headless mode
RUN apt-get update && apt-get install -y --no-install-recommends \
    libnss3 \
    libfreetype6 \
    libfreetype6-dev \
    libharfbuzz0b \
    ca-certificates \
    fonts-freefont-ttf \
    chromium \
    chromium-driver \
    firefox-esr \
    && rm -rf /var/lib/apt/lists/*

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies
RUN npm ci

# Install Playwright browsers (compatible with Debian's glibc)
RUN npx playwright install chromium firefox

# Copy source code and config
COPY . .

# Expose dev server port (for watch mode)
EXPOSE 5173

# Expose Vitest UI port
EXPOSE 51204

# Default command (can be overridden)
CMD ["npm", "run", "dev"]


