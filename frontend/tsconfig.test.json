{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ],
    "exclude": [
        "node_modules",
        "legacy"
    ]
}
