[MASTER]
# Use multiple processes for faster checking
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings that are not actionable for CASA-based code
disable=
    # Style/convention warnings (non-critical)
    C0103,  # invalid-name: CASA uses non-PEP8 naming
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0302,  # too-many-lines
    C0411,  # wrong-import-order: CASA requires specific order
    C0412,  # ungrouped-imports
    C0413,  # wrong-import-position: CASA init must happen early
    C0415,  # import-outside-toplevel: CASA requires lazy imports
    # Broad exception catching (intentional defensive patterns)
    W0718,  # broad-exception-caught
    # Logging warnings (style preference)
    W1201,  # logging-not-lazy
    W1203,  # logging-fstring-interpolation
    # Import warnings (CASA compatibility)
    W0404,  # reimported: CASA requires context-specific imports
    W0611,  # unused-import: May be used by CASA at runtime
    W0621,  # redefined-outer-name: CASA scoping patterns
    # File handling warnings
    W1514,  # unspecified-encoding: Not critical for binary/CASA files
    # Minor issues
    W0613,  # unused-argument: API compatibility
    W0612,  # unused-variable: May be used in debugging
    W0707,  # raise-missing-from: Not critical
    W1404,  # implicit-str-concat: Style preference
    W0107,  # unnecessary-pass: Empty handlers are intentional

[TYPECHECK]
# Ignore import errors for optional modules
ignored-modules=dsa110_contimg.qa.pipeline_hooks
# Ignore missing member warnings for CASA modules
generated-members=
    casacore.*,
    casatasks.*,
    casatools.*,
    numpy.*,
    astropy.io.fits.*

[FORMAT]
# Maximum line length
max-line-length=120

[DESIGN]
# Relax limits for complex CASA code
max-args=10
max-locals=25
max-branches=15
max-statements=60
