name: E2E Tests

on:
  push:
    branches: [main, develop, master-dev]
    paths:
      - "frontend/**"
      - "tests/e2e/**"
      - ".github/workflows/e2e-tests.yml"
  pull_request:
    branches: [main, develop, master-dev]
    paths:
      - "frontend/**"
      - "tests/e2e/**"
      - ".github/workflows/e2e-tests.yml"
  workflow_dispatch:

jobs:
  e2e-tests:
    name: E2E Tests (Docker)
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Start services with Docker Compose
        run: |
          docker compose up -d dashboard-dev
          echo "Waiting for services to be healthy..."
          timeout 120 bash -c 'until docker compose ps | grep -q "healthy"; do sleep 2; done' || exit 1
          echo "Services are ready"

      - name: Run route rendering integration test
        working-directory: ./frontend
        run: |
          docker run --rm \
            -v "$(pwd):/app" \
            -w /app \
            --network host \
            node:22 \
            sh -c "npm ci && npm test -- tests/integration/routes.test.tsx --reporter=verbose || echo 'Route rendering test failed - check test output'"

      - name: Run E2E tests
        working-directory: ./frontend
        env:
          BASE_URL: http://localhost:3210
        run: |
          docker run --rm \
            -v "$(pwd):/app" \
            -w /app \
            --network host \
            node:22 \
            sh -c "apt-get update -qq && \
                   apt-get install -y -qq libnspr4 libnss3 libdbus-1-3 libatk1.0-0 libatk-bridge2.0-0 libatspi2.0-0 libxcomposite1 libxdamage1 libxfixes3 libxrandr2 libgbm1 libxkbcommon0 libasound2 && \
                   npx playwright install chromium && \
                   npx playwright test --project=chromium --reporter=list,html"

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report
          path: frontend/playwright-report/
          retention-days: 7

      - name: Upload test results JSON
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results
          path: frontend/test-results/
          retention-days: 7

      - name: Stop services
        if: always()
        run: |
          docker compose down
