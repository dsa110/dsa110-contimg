# Frontend testing Docker container (includes Playwright)
FROM node:22-alpine

WORKDIR /app

# Install system dependencies for Playwright
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    && rm -rf /var/cache/apk/*

# Set Playwright browsers path (similar to Python Playwright setup)
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Set working directory
WORKDIR /app/frontend

# Copy package files first (for better caching)
COPY frontend/package*.json ./

# Install dependencies (including @playwright/test)
RUN npm ci

# Don't install Playwright browsers - they require glibc but Alpine uses musl
# Instead, create symlink structure pointing to system Chromium (installed via apk)
# Playwright Test looks for chromium_headless_shell-1194
RUN mkdir -p /ms-playwright/chromium_headless_shell-1194/chrome-linux && \
    ln -sf /usr/bin/chromium /ms-playwright/chromium_headless_shell-1194/chrome-linux/headless_shell && \
    ls -la /ms-playwright/chromium_headless_shell-1194/chrome-linux/headless_shell || echo "Symlink created"

# Verify system Chromium works
RUN chromium --version || echo "Chromium check failed"

# Copy Playwright config (source code will be mounted as volume, but config needs to be in image)
COPY frontend/playwright.config.ts ./

# Default command: Run Playwright E2E tests only
CMD ["npx", "playwright", "test"]

