{
  "mcpServers": {
    "perplexity": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY}",
        "-e",
        "PERPLEXITY_TIMEOUT_MS=600000",
        "mcp/perplexity"
      ]
    },
    "sequential-thinking": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    },
    "memory": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/memory"
      ]
    },
    "graphiti-memory": {
      "transport": "stdio",
      "command": "/home/ubuntu/.local/bin/uv",
      "args": [
        "-q",
        "run",
        "--isolated",
        "--directory",
        "/home/ubuntu/proj/mcps/graphiti/mcp_server",
        "graphiti_mcp_server.py",
        "--transport",
        "stdio",
        "--group-id",
        "dsa110-contimg"
      ],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "demodemo",
        "EMBEDDING_DIM": "768",
        "PYTHONPATH": "/home/ubuntu/proj/mcps/graphiti",
        "GEMINI_USE_VERTEX": "true",
        "VERTEX_BATCH": "64"
      }
    }
  }
}